<?xml version="1.0" encoding="ISO-8859-1"?>
<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="items.xsd">

    <enumtypes>
        <enumtype code="TicketStatus" dynamic="false">
            <value code="VIP"/>
            <value code="REGULAR"/>
        </enumtype>
    </enumtypes>

    <itemtypes>
        <itemtype code="Tickets">
            <deployment table="Tickets" typecode="10104"/>
            <attributes>
                <attribute qualifier="code" type="java.lang.String">
                    <description>uniq code for tickets</description>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="concert" type="Concert">
                    <description>concert type</description>
                    <modifiers read="true" write="true" search="true" optional="true"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="price" type="java.lang.Double">
                    <description>price of ticket</description>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="ticketCount" type="java.lang.Integer">
                    <description>count of tickets</description>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="ticketStatus" type="TicketStatus">
                    <description>type of ticket</description>
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>

        <itemtype code="VipTicketEvent">
            <deployment table="VipTicketEvent" typecode="10106"/>
            <attributes>
                <attribute qualifier="ticketCode" type="java.lang.String">
                    <description>Code of VIP ticket</description>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="concertCode" type="java.lang.String">
                    <description>Concert code for the ticket</description>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="eventTime" type="java.util.Date">
                    <description>Time of VIP ticket creation</description>
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>
        <itemtype code="TokenItem">
            <deployment table="TokenItem" typecode="10107"/>
            <attributes>
                <attribute qualifier="token" type="java.lang.String">
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>
    </itemtypes>
</items>
