<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
>

    <bean id="concerttoursCustomSetup" class="org.training.setup.ConcerttoursCustomSetup">
        <property name="importService" ref="importService"/>
    </bean>

    <bean id="concerttoursSystemSetup" class="org.training.setup.ConcerttoursSystemSetup">
        <constructor-arg ref="concerttoursService"/>
    </bean>

    <bean id="concerttoursService" class="org.training.service.impl.DefaultConcerttoursService">
        <property name="modelService" ref="modelService"/>
        <property name="mediaService" ref="mediaService"/>
        <property name="flexibleSearchService" ref="flexibleSearchService"/>
    </bean>

    <bean id="bandDAO" class="org.training.daos.impl.DefaultBandDAO"/>

    <alias name="defaultBandService" alias="bandService"/>
    <bean id="defaultBandService" class="org.training.service.impl.DefaultBandService">
        <constructor-arg ref="bandDAO"/>
    </bean>

    <bean id="producerDAO" class="org.training.daos.impl.DefaultProducerDAO">
        <constructor-arg ref="flexibleSearchService"/>
    </bean>
    <bean id="defaultProducerService" class="org.training.service.impl.DefaultProducerService">
        <constructor-arg ref="producerDAO"/>
    </bean>

    <alias name="defaultBandFacade" alias="bandFacade"/>
    <bean id="defaultBandFacade" class="org.training.facades.impl.DefaultBandFacade">
        <constructor-arg ref="bandService"/>
        <constructor-arg ref="bandConverter"/>
    </bean>

    <alias name="defaultProducerFacade" alias="producerFacade"/>
    <bean id="defaultProducerFacade" class="org.training.facades.impl.DefaultProducerFacade">
        <constructor-arg ref="defaultProducerService"/>
        <constructor-arg ref="producerBaseConverter"/>
    </bean>

    <alias name="defaultTourFacade" alias="tourFacade"/>
    <bean id="defaultTourFacade" class="org.training.facades.impl.DefaultTourFacade">
        <constructor-arg ref="productService"/>
    </bean>

    <alias name="concertDaysUntilAttributeHandler" alias="daysUntilHandler"/>
    <bean id="concertDaysUntilAttributeHandler" class="org.training.attributeHandler.ConcertDaysUntilAttributeHandler"/>

    <alias name="concertPastAttributeHandler" alias="pastHandler"/>
    <bean id="concertPastAttributeHandler" class="org.training.attributeHandler.ConcertPastAttributeHandler"/>

    <bean id="concerttourEventListener" class="org.training.events.NewBandEventListener" parent="abstractEventListener">
        <constructor-arg ref="modelService"/>
    </bean>

    <bean id="bandAlbumSalesInterceptor" class="org.training.interceptors.BandAlbumSalesInterceptor"/>
    <bean id="bandInterceptorMapping" class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
        <property name="interceptor" ref="bandAlbumSalesInterceptor"/>
        <property name="typeCode" value="Band"/>
    </bean>
    <bean id="bandAlbumSalesEventListener" class="org.training.events.BandAlbumSalesEventListener"
          parent="abstractEventListener">
        <property name="modelService" ref="modelService"/>
    </bean>

    <bean id="bandBasePopulator" class="org.training.populators.BandBasePopulator">
        <constructor-arg ref="i18NService"/>
        <constructor-arg ref="mediaService"/>
    </bean>

    <bean id="producerPopulator" class="org.training.populators.ProducerBasePopulator" />

    <bean id="bandConverter" class="org.training.converters.BandConverter">
        <property name="populators">
            <list>
                <ref bean="bandBasePopulator"/>
            </list>
        </property>
    </bean>

    <bean id="producerBaseConverter" class="org.training.converters.ProducerBaseConverter">
        <property name="populators">
            <list>
                <ref bean="producerPopulator"/>
            </list>
        </property>
    </bean>

</beans>
